{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "app/**/*",
    "app/**/*.vue",
    "./types/*.d.ts",
    "./types/responses/*.d.ts",
    "./types/plugins/*.d.ts"
  ],
  "exclude": ["app/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./app/*"]
    }
  }
}
